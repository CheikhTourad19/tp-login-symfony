{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">

            {# Display success or error messages #}
            {% for message in app.flashes('success') %}
                <p class="text-green-600">{{ message }}</p>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <p class="text-red-600">{{ message }}</p>
            {% endfor %}

            <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Creer un Compte</h2>

            <form method="post" action="{{ path('app_signup') }}">
                <div class="mb-4">
                    <label for="email" class="block text-gray-600 text-sm font-medium mb-1">Email</label>
                    <input type="email" id="email" name="email" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div><div class="mb-4">
                    <label for="nom" class="block text-gray-600 text-sm font-medium mb-1">nom</label>
                    <input type="text" id="nom" name="nom" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div><div class="mb-4">
                    <label for="prenom" class="block text-gray-600 text-sm font-medium mb-1">prenom</label>
                    <input type="text" id="prenom" name="prenom" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-600 text-sm font-medium mb-1">Password</label>
                    <input type="password" id="password" name="password" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="mb-4">
                    <label for="confirm_password" class="block text-gray-600 text-sm font-medium mb-1">Confirmer Password</label>
                    <input type="password" id="confirm_password" name="confirm_password" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="flex justify-between items-center mb-4">
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="_remember_me" class="form-checkbox text-blue-500">
                        <span class="ml-2 text-sm text-gray-600">Remember Me</span>
                    </label>
                </div>

                <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">
                    S'inscrire
                </button>
            </form>

            <p class="mt-4 text-sm text-center text-gray-600">
                Vous avez un Compte?
                <a href="{{ path('app_login') }}" class="text-blue-500 hover:underline">Se Connecter</a>
            </p>
        </div>
    </div>
{% endblock %}
