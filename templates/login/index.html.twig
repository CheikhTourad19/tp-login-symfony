{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-lg">
            {% for message in app.flashes('error') %}
                <p style="color: red;">{{ message }}</p>
            {% endfor %}
            <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Connexion</h2>

            <form method="post" action="{{ path('app_login-check') }}">
                <div class="mb-4">
                    <label for="username" class="block text-gray-600 text-sm font-medium mb-1">Email</label>
                    <input type="email" id="username" name="_username" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-600 text-sm font-medium mb-1">Mot de passe</label>
                    <input type="password" id="password" name="_password" required
                           class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>

                <div class="flex justify-between items-center mb-4">
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="_remember_me" class="form-checkbox text-blue-500">
                        <span class="ml-2 text-sm text-gray-600">Se souvenir de moi</span>
                    </label>
                    <a href="#" class="text-sm text-blue-500 hover:underline">Mot de passe oubli√© ?</a>
                </div>

                <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition">
                    Se connecter
                </button>
            </form>

            <p class="mt-4 text-sm text-center text-gray-600">
                Pas encore de compte ?
                <a href="{{ path('app_register') }}" class="text-blue-500 hover:underline">Inscrivez-vous</a>
            </p>
        </div>
    </div>
{% endblock %}
